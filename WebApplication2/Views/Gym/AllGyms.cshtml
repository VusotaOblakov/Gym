@model List<WebApplication2.Models.Gym>

@{
}

@if (User.IsInRole("SuperAdmin"))
{
    <p>
        <a asp-action="AddGym">Add Gym</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>GymId</th>
            <th>GymName</th>
            <th>GymDesc</th>
            <th>GymAddress</th>
            <th>Owner</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var gym in Model)
        {
            <tr>
                <td>@gym.id</td>
                <td>@gym.name</td>
                <td>@gym.description</td>
                <td>@gym.adress</td>
                <td>@gym.owner_id</td>
                <td>@gym.price</td>
                <td>
                    <a asp-action="EditGym" asp-route-id="@gym.id">Edit</a> |
                    <a asp-action="DeleteGym" asp-route-id="@gym.id">Delete</a>
                    <a asp-action="GymDetails" asp-route-id="@gym.id">View</a>
                </td>
            </tr>    
        }
    </tbody>
</table>

